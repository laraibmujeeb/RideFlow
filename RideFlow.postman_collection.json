                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"driver_id\": 2,\n    \"latitude\": 40.7125,\n    \"longitude\": -74.0055\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/driver/location",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "driver",
                                "location"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Nearby Rides",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/driver/rides/nearby?latitude=40.7120&longitude=-74.0050&radius=10",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "driver",
                                "rides",
                                "nearby"
                            ],
                            "query": [
                                {
                                    "key": "latitude",
                                    "value": "40.7120"
                                },
                                {
                                    "key": "longitude",
                                    "value": "-74.0050"
                                },
                                {
                                    "key": "radius",
                                    "value": "10"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Request Ride (Claim)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"driver_id\": 2\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/driver/rides/1/request",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "driver",
                                "rides",
                                "1",
                                "request"
                            ]
                        }
                    }
                },
                {
                    "name": "Driver: Mark Complete",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/driver/rides/1/complete",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "driver",
                                "rides",
                                "1",
                                "complete"
                            ]
                        }
                    }
                }
            ]
        }
