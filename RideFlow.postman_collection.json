{
    "info": {
        "_postman_id": "rideflow-api-collection",
        "name": "RideFlow API",
        "description": "API Collection for testing the RideFlow ride-booking system lifecycle.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Passenger",
            "item": [
                {
                    "name": "Create Ride Request",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"passenger_id\": 1,\n    \"pickup_lat\": 40.7128,\n    \"pickup_lng\": -74.0060,\n    \"dest_lat\": 40.7306,\n    \"dest_lng\": -73.9352\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/passenger/rides",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "passenger",
                                "rides"
                            ]
                        }
                    }
                },
                {
                    "name": "Approve Driver",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"driver_id\": 2\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/passenger/rides/1/approve-driver",
